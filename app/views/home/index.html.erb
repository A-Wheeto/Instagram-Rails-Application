<%= render "layouts/flash_messages" %>
<div class="d-flex my-5 justify-content-center gap-5">
  <div class="d-flex flex-column gap-3">
    <%= render 'story/stories_list' %>
    <div class="flex flex-column">
    <% if current_user.posts.any? %>
      <%= render "posts/post", post: current_user.posts.last %>
      <%= render "posts/post", post: current_user.posts.second %>
      <%= render "posts/post", post: current_user.posts.third %>
      <%= render "posts/post", post: current_user.posts.fourth %>
    <% end %>
    </div>
  </div>
  <%= render 'suggestions/suggestions_list' %>
</div>